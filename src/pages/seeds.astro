---
import Default from "../layouts/Default.astro";
import { getSeeds } from "../config_pocketbase";

const seeds = await getSeeds();
---

<Default>
  <div slot="main">
    <h1>Seeds</h1>
    <ul>
      {
        seeds.map((seed) => (
          <li>
            <a href={"/seeds/" + seed.slug}>
              {seed.name},{" "}
              {seed.expand.author.firstname + " " + seed.expand.author.lastname}
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</Default>
