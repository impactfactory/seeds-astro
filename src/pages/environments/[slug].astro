---
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../config";
import { Picture } from "@astrojs/image/components";

// import pocketbase functionality
import { getEnvironments, filePathEnvironments } from "../../config_pocketbase";

// create all the routes with specific detail page props
export async function getStaticPaths() {
  return (await getEnvironments()).map((env) => ({
    params: {
      slug: env.slug,
    },
    props: {
      env,
    },
  }));
}

interface Props {
  env: any;
}

const { env } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={env.name} description={env.desc_short} />
    <style>
      .title {
        font-size: 2em;
        margin: 0.25em 0 0;
      }
      hr {
        border-top: 1px solid #ddd;
        margin: 1rem 0;
      }
      .thmb {
        max-height: 100px;
        max-width: 100px;
      }
    </style>
  </head>

  <body>
    <Header />
    <main>
      <article>
        <h1 class="title">{env.name}</h1>

        <hr />
        <p>{env.desc}</p>

        <!--
        <slot />-->
      </article>
    </main>
    <Footer />

    {console.log(env)}
  </body>
</html>
