---
import Frontpage from "../../layouts/Frontpage.astro";
import { getSeeds } from "../../config_pocketbase";
import { trans } from "../../data/lang/de";

const seeds = await getSeeds();
const local = "de";
---

<Frontpage
  title="Seeds"
  desc="Ãœbersicht"
  bc_page="Seeds"
  trans={trans.components}
>
  <div slot="main">
    <h1 style="font-size:var(--fs-md);">Welcome</h1>
    <p>This page is experimental... under construction</p>
    <ul>
      {
        seeds.map((seed) => (
          <li>
            <a href={"/de/seeds/" + seed.slug}>
              {seed.name},{" "}
              {seed.expand.author.firstname + " " + seed.expand.author.lastname}
            </a>
          </li>
        ))
      }
    </ul>
    <h2>Overview lists</h2>
    <ul>
      <li>
        <a href={"/" + local + "/" + trans.contents.environments.slug}
          >{trans.contents.environments.name}</a
        >
        <li>
          <a href={"/" + local + "/" + trans.contents.plants.slug}
            >{trans.contents.plants.name}</a
          >
        </li>
        <li>
          <a href={"/" + local + "/" + trans.contents.animals.slug}
            >{trans.contents.animals.name}</a
          >
        </li>
        <li>
          <a href={"/" + local + "/" + trans.contents.principles.slug}
            >{trans.contents.principles.name}</a
          >
        </li>
        <li>
          <a href={"/" + local + "/" + trans.contents.authors.slug}
            >{trans.contents.authors.name}</a
          >
        </li>
      </li>
    </ul>
  </div>
</Frontpage>
