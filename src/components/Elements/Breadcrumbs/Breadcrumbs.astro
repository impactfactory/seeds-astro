---
import { Icon } from "astro-icon";
import TwoLevels from "./TwoLevels.astro";

const { cat, cat_name, page_name } = Astro.props;
---

<nav class="breadcrumbs">
  <a href="/"><Icon name="mdi:home" /></a><span>&gt;</span>{
    cat ? <TwoLevels cat={cat} cat_name={cat_name} /> : ""
  }{" " + page_name}
</nav>

<style>
  svg {
    height: 24px;
    margin-right: 4px;
    transform: translateY(6px);
    width: 24px;
  }
</style>
