---
import { Icon } from "astro-icon";
//import { filePathSteps } from "../../config_pocketbase";
import Steps from "./Steps.astro";

const { costs, materials, steps, t, time, tools } = Astro.props;
---

<section class="howto">
  <h2>{t.title}</h2>

  <div class="prep">
    <ul class="">
      <h3>{t.preparation}</h3>
      <li>
        <Icon name="mdi:book-check-outline" />
        {t.materials}: {materials}
      </li>
      <li>
        <Icon name="mdi:tools" />
        {t.tools}:
        {tools}
      </li>

      <li>
        <Icon name="mdi:wallet" />
        {t.costs}:
        {costs} CHF
      </li>

      <li>
        <Icon name="mdi:clock-time-eight" />
        {t.time}:
        {time} Stunden
      </li>
    </ul>
  </div>
  <div class="steps">
    <h3>{t.steps}</h3>

    {steps.map((step, index) => <Steps step={step} index={index} />)}
  </div>
</section>

<style>
  .howto svg {
    height: 20px;
    transform: translateY(0.25rem);
    width: 20px;
  }

  h3 {
    padding: 0;
  }

  ul {
    padding: 0;
    list-style-type: none;
  }

  li {
    font-weight: var(--fw-xl);
  }
</style>
